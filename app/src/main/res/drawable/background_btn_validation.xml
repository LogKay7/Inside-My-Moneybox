<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- disable state. -->
<item android:state_enabled="false">
    <shape android:shape="rectangle">
        <corners android:radius="28dp"/>
        <solid android:color="#dddddd"/>
    </shape>
</item>

<!--released state. -->
<item android:state_pressed="false">
    <shape android:shape="rectangle">
        <corners android:radius="28dp"/>
        <gradient
            android:startColor="#6CC63F"
            android:centerColor="#6CC63F"
            android:endColor="#6CC63F"
            android:angle="360" />
    </shape>
</item>

<!--pressed state. -->
<item android:state_pressed="true">
    <shape android:shape="rectangle">
        <corners android:radius="28dp"/>
        <gradient
            android:startColor="#017100"
            android:centerColor="#439128"
            android:endColor="#1DB100"
            android:angle="360" />
    </shape>
</item>

</selector>